<div class="container-fluid bg-light w-50 h-auto rounded-lg mt-5">
  <div class="d-flex flex-column align-items-center justify-content-center text-align">
    <h2>Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field form-group mb-3">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="actions form-group mb-3">
        <%= f.submit "Send me reset password instructions", :class => "form-control btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>